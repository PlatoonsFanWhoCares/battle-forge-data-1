    "rules": {
        "merc_tactics": {
            "name": "Mercenary Tactics",
            "inputs": ["x"],
            "description": "When this unit is activated, choose up to X friendly _Heavy Infantry_ units within 6\" to receive one of the following bonuses until the end of the round: \n * Re-roll failed Strength tests of 9+ \n * +3\" Movement",
            "points": ["rule.x", {"multiply": 15}]
        },
        "hunter_tactics": {
            "name": "Hunter Tactics",
            "inputs": ["x"],
            "description": "When this unit is activated, choose up to X friendly _Beast_ units within 12\" to receive one of the following bonuses until the end of the round: \n * Re-roll failed Strength tests of 9+ \n * Re-roll failed Initiative tests of 9+",
            "points": ["rule.x", {"multiply": 15}]
        },
        "trappers": {"name": "Trappers", "description": "When this unit successfully falls back from an enemy unit, the enemy unit suffers 1 hit with no AP.", "points": [1]}
    },
    "strategies": {
        "thick_skinned": {
            "phase": "activation",
            "name": "Thick Skinned",
            "flavor": "Ogres are said to have layers of hardened skin that are impossible to penetrate.",
            "description": "Use before taking Save rolls for a unit. That unit gets +1 Save.",
            "cost": 2
        },
        "brutality": {
            "phase": "activation",
            "name": "Brutality",
            "flavor": "With their superior strength and savagery these ogres can easily crush any opposition.",
            "description": "Use before fighting with a unit. Hit rolls of 1 or 2 gain +1 AP.",
            "cost": 1
        },
        "bull_rush": {
            "name": "Bull Rush",
            "phase": "activation",
            "flavor": "Rushing head first into danger without a care for losses on both sides.",
            "description": "Use when a unit declares a Charge action. That unit gets +3\" of Movement for that action.",
            "cost": 1
        }
    },
    "powers": {
        "rampage": {"name": "Rampage", "description": "Target friendly unit within 12\" may immediately make a free charge action.", "charge": 5},
        "butcher": {"name": "Butcher", "description": "Target enemy unit within 12\" takes 4 hits with AP(2).", "charge": 6},
        "bloodlust": {"name": "Bloodlust", "description": "Target friendly unit within 6\" has +1 Strength until the end of the turn.", "charge": 7}
